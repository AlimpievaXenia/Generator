<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{{> header}}
<form method="POST" class="text-center">
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="wrapper position-absolute top-50 start-50 translate-middle">
          <div class="popup">
            <div class="popup-inside">
              <div class="backgrounds">
                <div class="background"></div>
                <div class="background background2"></div>
                <div class="background background3"></div>
                <div class="background background4"></div>
                <div class="background background5"></div>
                <div class="background background6"></div>
              </div>
            </div>
            <div class="content position-relative">
              <div class="content-wrapper">
                <img class="img" src="/assets/новое.png" alt="..." width="570" height="320">
                <div class="mb-3">
                  <br>
                  <label for="exampleInputType" class="form-label">Тип занятия:</label>
                  <input name="type" class="form-control" id="exampleInputType">
                </div>
                <div class="mb-3">
                  <label for="exampleInputActivity" class="form-label">Содержание:</label>
                  <input name="activity" class="form-control" id="exampleInputActivity">
                </div>
                <div class="mb-3">
                  <label for="exampleInputParticipants" class="form-label">Количество участников:</label>
                  <input name="participants" class="form-control" id="exampleInputParticipants">
                </div>
                <button type="submit" class="btn btn-warning">Создать</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
